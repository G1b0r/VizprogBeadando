<UserControl x:Class="project_library.MVVM.View.BookDetailView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:local="clr-namespace:project_library"
            mc:Ignorable="d"
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Go Back Button + Book Cover -->
        <StackPanel>
            <Button x:Name="backBtn" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,10,10,20" 
        Content="← Go back" Width="180" FontSize="17" Command="{Binding GoBackCommand}" />


            <Border Width="250" Height="350" CornerRadius="5" Margin="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3"/>
                </Border.Effect>
                <Border.Background>
                    <ImageBrush ImageSource="{Binding SelectedBook.pic_name}" />
                </Border.Background>
            </Border>
        </StackPanel>

        <!-- Book Details -->
        <StackPanel Grid.Column="1" Margin="5">
            <!-- Title -->
            <TextBlock Margin="5 10 10 5" Text="{Binding SelectedBook.title}" FontSize="27" Foreground="White" FontFamily="Comic Sans MS"/>
            <!-- Genre -->
            <TextBlock Margin="20 0 0 0" Text="{Binding SelectedBook.genre}" FontSize="20" Foreground="White">
                <TextBlock.RenderTransform>
                    <SkewTransform AngleX="-10"/>
                </TextBlock.RenderTransform>
            </TextBlock>
            <!-- Authors -->
            <TextBlock Text="Authors:" FontSize="20" Foreground="White" Margin="0,20,0,5" />
            <ItemsControl ItemsSource="{Binding Authors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding name}" Foreground="White" FontSize="16" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <!-- Summary -->
            <TextBlock Margin="5 10 10 5" TextWrapping="WrapWithOverflow" Foreground="White" FontSize="12" 
                       Text="{Binding SelectedBook.summary}" />
        </StackPanel>

        <!-- Commands and Admin Features -->
        <StackPanel Grid.Column="2">
            <!-- Available Pieces -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Available pieces:" Foreground="White" Margin="5" TextWrapping="Wrap" Width="120" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding AvailableCopies}" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"/>
            </StackPanel>

            <!-- Take Out Button -->
            <StackPanel Visibility="{Binding IsTakenByUserInvert}">
                <Button Command="{Binding TakeBookOutCommand}" Content="Take out" Width="90" Margin="5"/>
            </StackPanel>
            <!-- Admin Features -->
            <StackPanel Visibility="{Binding IsAdmin}">
                <Button Visibility="{Binding IsDeleted}" Command="{Binding MakeVisibleCommand}" x:Name="makeVisible" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Content="Enable" Width="90" FontSize="13" />
                <Button Visibility="{Binding IsDeletedInvert}" Command="{Binding MakeInvisibleCommand}" x:Name="makeInvisible" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Content="Disable" Width="90" FontSize="13" />
                <Button x:Name="changeAmount" HorizontalAlignment="Center" Content="Amount" Width="90" Margin="5" Command="{Binding ChangeAmountCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
