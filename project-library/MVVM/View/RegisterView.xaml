<UserControl x:Class="project_library.MVVM.View.RegisterView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:local="clr-namespace:project_library"
            mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Register" Foreground="White" FontSize="30" HorizontalAlignment="Left" Margin="20,10,0,20"/>
        <Button x:Name="localModeBtn"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20,10,10,20" Content="I already have an account" Width="200" Command="{Binding DataContext.LoginViewCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
        <StackPanel>
            <TextBlock Margin="0 50 0 5" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold" Text="Welcome to our Library"/>
            <TextBlock FontSize="17" FontWeight="SemiBold" HorizontalAlignment="Center" Text="Please register your account to acces extended features"/>
            <TextBox Margin="0 15 0 0" x:Name="txtUsername" Width="300" FontSize="18" materialDesign:HintAssist.Hint="Enter Username" BorderThickness="2" BorderBrush="{DynamicResource MaterialDesgin}" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
            <PasswordBox Margin="0 20 0 0" x:Name="txtPassword" Width="300" FontSize="18" materialDesign:HintAssist.Hint="Enter password" BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}" Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
            <PasswordBox Margin="0 20 0 0" x:Name="txtPasswordAgain" Width="300" FontSize="18" materialDesign:HintAssist.Hint="Enter password again" BorderThickness="2" BorderBrush="{DynamicResource MaterialDesignDivider}" Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>
            <Button Margin="0 20 0 0" x:Name="registerBtn" Style="{StaticResource MaterialDesignFlatMidBgButton}"  Height="53" Width="300" materialDesign:ButtonAssist.CornerRadius="10" FontSize="18" Content="Register"/>
        </StackPanel>

    </Grid>
</UserControl>

