<UserControl x:Class="project_library.MVVM.View.LoginView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:local="clr-namespace:project_library"
            xmlns:viewModel1="clr-namespace:project_library.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <TextBlock Text="Login" Foreground="White" FontSize="24" HorizontalAlignment="Left" Margin="20,10,0,20"/>
        <Button x:Name="localModeBtn" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20,10,10,20" Content="I don't have an account" Width="180" FontSize="12" Command="{Binding DataContext.RegisterViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
        <StackPanel>
            <TextBlock Margin="0 30 0 5" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Text="Welcome Back!"/>
            <TextBlock FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Text="Please log into your existing account"/>

            <!-- Username Input -->
            <TextBox Margin="0 10 0 0" x:Name="txtUsername" Width="250" FontSize="14" materialDesign:HintAssist.Hint="Enter Username" BorderThickness="1.5" BorderBrush="{DynamicResource MaterialDesgin}" Style="{StaticResource MaterialDesignOutlinedTextBox}" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Password Input -->
            <PasswordBox Margin="0 15 0 0" x:Name="txtPassword" Width="250" FontSize="14" materialDesign:HintAssist.Hint="Enter password" BorderThickness="1.5" BorderBrush="{DynamicResource MaterialDesignDivider}" Style="{StaticResource MaterialDesignOutlinedPasswordBox}" PasswordChanged="txtPassword_PasswordChanged"/>

            <!-- Login Button -->
            <Button Margin="0 15 0 0" x:Name="loginBtn" Style="{StaticResource MaterialDesignFlatMidBgButton}" Height="45" Width="250" materialDesign:ButtonAssist.CornerRadius="8" FontSize="14" Content="Log in" Command="{Binding LoginCommand}"/>
            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
