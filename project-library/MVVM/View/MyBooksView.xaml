<UserControl x:Class="project_library.MVVM.View.MyBooksView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            xmlns:local="clr-namespace:project_library"
            mc:Ignorable="d"
            d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="My Books" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="35" Margin="20,15,15,15"/>
        <TextBlock Text="Kivett könyveim:" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="20,0,0,0" Grid.Row="1"/>

        <ScrollViewer Grid.Row="2">
            <StackPanel Margin="20 0">
                <ItemsControl x:Name="kivettKonyvek" ItemsSource="{Binding kivett_lista}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10" Width="175" Height="280">
                                <StackPanel>
                                    <Border Width="160" Height="200" CornerRadius="5" Margin="5">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1"/>
                                        </Border.Effect>
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding pic_name}"/>
                                        </Border.Background>
                                    </Border>
                                    <TextBlock Margin="5" Text="{Binding title}" Foreground="white" FontSize="25"/>
                                    <TextBlock Margin="5" Text="{Binding genre}" Foreground="White"/>
                                    <Button Content="Return" Command="{Binding DataContext.ReturnBookCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" Margin="5"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>


    </Grid>
</UserControl>
